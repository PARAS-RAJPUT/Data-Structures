DATE: 01 Sept 2025
class Solution {
public:
    double maxAverageRatio(vector<vector<int>>& classes, int extraStudents) {
        int n = classes.size();

        priority_queue<pair<double,int>> pq;

        for(int i = 0; i < n; i++) {
            int pass = classes[i][0], total = classes[i][1];
            double g = (double)(pass + 1) / (total + 1) - (double)pass / total;
            pq.push({g, i});
        }

        while(extraStudents--) {
            auto[g, idx] = pq.top();
            pq.pop();

            classes[idx][0]++;
            classes[idx][1]++;

            int pass = classes[idx][0], total = classes[idx][1];
            double ng = (double)(pass + 1) / (total + 1) - (double)pass / total;
            pq.push({ng, idx}); 
        }

        double result = 0.0;
        for(auto &c : classes) {
            result += (double)c[0] / c[1];
        }
        return result/n;
    }
};
